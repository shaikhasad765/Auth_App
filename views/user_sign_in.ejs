<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Include Bootstrap CSS file -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    
    <!-- Linking Custom CSS File -->
    <link rel="stylesheet" href="/css/sign_in.css">

</head>
<body>

    
    
<div class="main-c container">

    <div class="main">

        <div class="credentials">
            <!-- Heading for sign-in section -->
            <h1 style="color: white;">SIGN-IN</h1>

            <!-- Form for user sign-in -->
            <form action="/users/create-session" method="post">

                <!-- Email input field -->
                <input style="padding-left: 10px;" type="email" placeholder="Enter Email" name="email">

                <!-- Password input field -->
                <input style="padding-left: 10px;" type="password" placeholder="Password" name="password">

                <div> 
                    <!-- Submit button for signing in -->
                    <input type="submit" value="Login" name="login" class="btn">
                </div>
            
            </form>
        </div>

        <div class="redirect">

            <!-- Link to sign-up page for users without an account -->
            <a href="/users/sign-up">Dont have Account? SignUp</a>

        </div>

        <p class="gauth">

            <!-- Google logo image -->
            <img src="/images/google.png" width="25px" alt="google">

            <!-- Link to sign-in/sign-up with Google functionality -->
            <a href="/users/auth/google">&nbsp;&nbsp;Sign-in/Sign-up With Google</a>

        </p>

    </div>

</div>

<script>
    $(document).ready(function (){
        console.log("signin");
        $('.signin-h').addClass("active") // Adds "active" class to the sign-in navigation link
    })
</script>
</body>
</html>